@model List<Model.Domain.Album>

@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron"></div>
<div class="row">
    <div class="col-md-12">
        <div class="well well-sm text-right">
            @Html.ActionLink("Nuevo Album", "Create", null, new { @class = "btn btn-primary" })
        </div>
         
    </div>
</div>

<div class="row">
    @foreach (var m in Model)
    {
        
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="~/Uploads/@m.PhotoLink" alt="@m.PhotoLink">
                    <div class="caption">
                        <a href="~/photo/index/@m.Id"><h3>@m.Name</h3></a>
                        <p>@m.Description</p>
                        <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                    </div>
                </div>
            </div>
        
    }
</div>

