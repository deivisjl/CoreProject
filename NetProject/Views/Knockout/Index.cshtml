
@{
    ViewBag.Title = "Index";
}

<h2>Index Knockouts</h2>

<div class="col-md-6">
    <div class="form-group">
        <label class="control-label">Nombre</label>
        <input  class="form-control" type="text" name="firstName" data-bind="value: FirstName"/>
    </div>

    <div class="form-group">
        <label class="control-label">Apellido</label>
        <input class="form-control" type="text" name="lastName" data-bind="value: LastName" />
    </div>

    <p>Hello <span data-bind="text:FullName"></span></p>
</div>


@section Scripts{ 
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.2/knockout-min.js"></script>
    <script>
        var NameViewModel = function (fname, lname) {
            this.FirstName = ko.observable(fname);
            this.LastName = ko.observable(lname);

            this.FullName = ko.computed(function () {
                return this.FirstName() + " " + this.LastName()
            }, this)
        }

        ko.applyBindings(new NameViewModel("Deivis","Lopez"))
    </script>
    }


